/* Requires the Docker Pipeline plugin */
pipeline {
    agent {
        docker {
            alwaysPull true
            image 'node:16.16.0-alpine'
        }
    }
    stages {
        stage("Build") {
            agent {
                docker {
                    alwaysPull true
                    image 'node:16.16.0-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
            }
        }
    }
}
